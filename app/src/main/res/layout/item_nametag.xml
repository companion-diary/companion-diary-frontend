<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/name_tag_iv"
        android:layout_width="29.18dp"
        android:layout_height="27.78dp"
        android:layout_marginStart="6.34dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/name_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="호두"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginStart="9.34dp"
        app:layout_constraintTop_toTopOf="@id/name_tag_iv"
        app:layout_constraintBottom_toBottomOf="@id/name_tag_iv"
        app:layout_constraintStart_toEndOf="@id/name_tag_iv"/>


</androidx.constraintlayout.widget.ConstraintLayout>