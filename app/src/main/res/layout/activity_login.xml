<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/login_background_img"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="61.44dp"
                android:layout_height="43.45dp"
                android:src="@drawable/new_title_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17.36dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subtitle1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jalnanotp"
                    android:text="동"
                    android:textColor="#FD961D"
                    android:textSize="32.7sp" />

                <TextView
                    android:id="@+id/subtitle2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jalnanotp"
                    android:text="식"
                    android:textColor="#4E9F27"
                    android:textSize="32.7sp" />

                <TextView
                    android:id="@+id/title1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jalnanotp"
                    android:text="이 일기"
                    android:textColor="#232323"
                    android:textSize="32.7sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동식물 일기 애플리케이션"
                android:fontFamily="@font/robotoblack"
                android:textColor="#858585"
                android:textSize="12sp"
                />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/loginBtn"
            app:layout_constraintStart_toStartOf="@id/loginBtn"
            app:layout_constraintEnd_toEndOf="@id/loginBtn"
            android:id="@+id/subtitle_layout">

            <ImageView
                android:layout_width="73dp"
                android:layout_height="1dp"
                android:src="@drawable/subtitle_line"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/title2_tv"
                app:layout_constraintBottom_toBottomOf="@id/title2_tv"
                android:id="@+id/sub_title_line1"
                android:layout_marginStart="4dp"
                />


            <TextView
                app:layout_constraintStart_toEndOf="@id/sub_title_line1"
                android:id="@+id/title2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoblack"
                android:text="지금 동식이 일기를 시작하세요"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="#333333"
                android:textSize="12sp" />

            <ImageView
                android:layout_marginStart="4dp"
                android:layout_width="73dp"
                android:layout_height="1dp"
                android:src="@drawable/subtitle_line"
                app:layout_constraintStart_toEndOf="@id/title2_tv"
                app:layout_constraintTop_toTopOf="@id/title2_tv"
                app:layout_constraintBottom_toBottomOf="@id/title2_tv"
                android:id="@+id/sub_title_line2"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/loginBtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="103dp"
            android:src="@drawable/kakao_login_btn_resize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

