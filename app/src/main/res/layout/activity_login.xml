<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_marginStart="38.75dp"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="57.57dp"
            android:layout_height="40.71dp"
            android:src="@drawable/title_icon"
            android:layout_marginBottom="15dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subtitle1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jalnanotp"
                android:text="동"
                android:textColor="#FD961D"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/subtitle2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jalnanotp"
                android:text="식"
                android:textColor="#3D821C"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/title1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jalnanotp"
                android:text="이와 함께"
                android:textColor="#484848"
                android:textSize="30sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/title2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jalnanotp"
            android:text="오늘을 기억해요!"
            android:textColor="#484848"
            android:textSize="30sp" />

    </LinearLayout>

    <ImageButton
        android:layout_marginTop="100dp"
        android:id="@+id/loginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kakao_login_medium_wide"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="?android:attr/borderlessButtonStyle"
        tools:ignore="SpeakableTextPresentCheck" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/loginBtn"
        app:layout_constraintStart_toStartOf="@id/loginBtn"
        android:layout_marginTop="16dp"
        android:id="@+id/remember_me_cb"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/remember_me_cb"
        app:layout_constraintTop_toBottomOf="@id/loginBtn"
        android:text="로그인 상태 유지"
        android:fontFamily="@font/notosanskrregular"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>