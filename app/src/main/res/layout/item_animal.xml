<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_animal_cv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="20dp">
        <ImageView
            android:id="@+id/item_animal_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/item_animal_arrow_cv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@id/item_animal_cv"
        app:layout_constraintRight_toRightOf="@id/item_animal_cv"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        >
        <ImageView
            android:id="@+id/item_animal_arrow_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:background="#FD961D"
            />
    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/item_animal_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_animal_cv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:textColor="#FD961D"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:text="호두"
        />
    <ImageView
        android:id="@+id/item_animal_gender_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/item_animal_cv"
        app:layout_constraintLeft_toRightOf="@id/item_animal_name_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_animal_name_tv"
        android:src="@drawable/ic_android_black_24dp"
        />
    <TextView
        android:id="@+id/item_animal_species_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_animal_name_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:textSize="12sp"
        android:textColor="#616161"
        android:text="골든 리트리버"
        />
    <TextView
        android:id="@+id/item_animal_age_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_animal_name_tv"
        app:layout_constraintLeft_toRightOf="@id/item_animal_species_tv"
        android:textSize="12sp"
        android:textColor="#616161"
        android:text="2살"
        android:layout_marginLeft="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>