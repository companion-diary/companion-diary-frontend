<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="74dp"
    android:layout_height="74dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_img_iv"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:scaleType="centerCrop"
        android:background="@drawable/border_img"
        app:layout_constraintTop_toTopOf="@id/item_img_border"
        app:layout_constraintBottom_toBottomOf="@id/item_img_border"
        app:layout_constraintStart_toStartOf="@id/item_img_border"
        app:layout_constraintEnd_toEndOf="@id/item_img_border"/>

    <ImageView
        android:id="@+id/item_img_border"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/border_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="5dp"/>

    <ImageView
        android:id="@+id/remove_img_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_remove"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>