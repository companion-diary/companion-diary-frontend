<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/community_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커뮤니티"
        android:fontFamily="@font/notosanskrbold"
        android:textColor="#484848"
        android:textSize="16sp"
        android:layout_marginTop="26.55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/search_et"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/searchview_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/community_tv"
        android:drawableLeft="@drawable/searchicon_resize"
        android:drawablePadding="6.95dp"
        android:hint="검색"
        android:fontFamily="@font/notosanskrregular"
        android:textSize="12sp"
        android:paddingTop="11dp"
        android:paddingStart="16.87dp"
        android:paddingBottom="5dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <Spinner
        android:id="@+id/select_menu_spinner"
        android:layout_width="109.73dp"
        android:layout_height="30dp"
        android:layout_marginTop="22dp"
        android:spinnerMode="dropdown"
        android:layout_centerInParent="true"
        android:popupBackground="@drawable/community_spinner_arrow"
        android:background="@drawable/community_spinner_background_resize"
        app:layout_constraintStart_toStartOf="@id/search_et"
        app:layout_constraintTop_toBottomOf="@+id/search_et"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postKinds_btn_group"
        app:layout_constraintTop_toBottomOf="@id/search_et"
        app:layout_constraintStart_toEndOf="@id/select_menu_spinner"
        android:orientation="horizontal"
        android:layout_marginTop="22dp"
        >

        <RadioButton
            android:id="@+id/question_post_radio_btn"
            android:background="@drawable/community_btn_selector"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:button="@null"
            android:textColor="#979797"
            android:text="질문글"
            android:gravity="center"
            android:textSize="14sp"
            android:fontFamily="@font/notosanskrregular"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:includeFontPadding="false"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:background="@drawable/community_btn_selector"
            android:id="@+id/brag_post_radio_btn"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:button="@null"
            android:textSize="14sp"
            android:textColor="#979797"
            android:layout_marginEnd="50.27dp"
            android:text="자랑글"
            android:includeFontPadding="false"
            android:gravity="center"
            android:fontFamily="@font/notosanskrregular"
            tools:ignore="TouchTargetSizeCheck" />

    </RadioGroup>


    <FrameLayout
        android:layout_marginTop="30dp"
        android:id="@+id/community_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@+id/select_menu_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>