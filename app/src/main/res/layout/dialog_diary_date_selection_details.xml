<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:behavior_hideable="true"
    android:background="@drawable/border_bottom_sheet_dialog"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <ImageView
        android:id="@+id/prev_iv"
        android:layout_width="10dp"
        android:layout_height="16dp"
        android:background="@drawable/ic_previous_button"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/year_month_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_regular"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/prev_iv"
        app:layout_constraintBottom_toBottomOf="@id/prev_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/companion_select_explanation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어떤 친구의 하루를 작성하시겠어요?"
        android:textSize="12sp"
        android:textColor="#858585"
        android:fontFamily="@font/roboto_regular"
        android:includeFontPadding="false"
        android:layout_marginStart="25dp"
        android:layout_marginTop="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/prev_iv"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/companion_name_tag_rv"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:overScrollMode="never"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintStart_toStartOf="@id/companion_select_explanation_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/companion_select_explanation_tv"/>

    <TextView
        android:id="@+id/diary_explanation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작성된 일기"
        android:textSize="12sp"
        android:textColor="#858585"
        android:fontFamily="@font/roboto_regular"
        android:includeFontPadding="false"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/companion_name_tag_rv"
        app:layout_constraintStart_toStartOf="@id/companion_select_explanation_tv"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/diary_rv"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:overScrollMode="never"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/diary_explanation_tv"
        app:layout_constraintStart_toStartOf="@id/diary_explanation_tv"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/write_diary_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="일기 작성"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:letterSpacing="0"
        style="?android:attr/borderlessButtonStyle"
        android:includeFontPadding="false"
        android:layout_marginTop="25dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintTop_toBottomOf="@id/diary_rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/border_register_button_green"/>

</androidx.constraintlayout.widget.ConstraintLayout>