<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/write_diary_toolbar"
        layout="@layout/toolbar_write_diary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/name_tag_layout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/border_name_tag_animal"
        android:paddingEnd="15dp"
        app:layout_constraintBottom_toTopOf="@id/year_month_date_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/write_diary_toolbar">

        <ImageView
            android:id="@+id/name_tag_iv"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/ic_animal"
            android:layout_gravity="center_vertical|left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/name_tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="14sp"
            android:fontFamily="@font/jalnan"
            android:textColor="@color/main_color_orange"
            android:gravity="center"
            android:layout_marginStart="9dp"
            app:layout_constraintTop_toTopOf="@id/name_tag_iv"
            app:layout_constraintBottom_toBottomOf="@id/name_tag_iv"
            app:layout_constraintStart_toEndOf="@id/name_tag_iv"/>

    </LinearLayout>

    <TextView
        android:id="@+id/year_month_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/main_color_black"
        android:fontFamily="@font/roboto_bold"
        android:includeFontPadding="false"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@id/name_tag_layout"
        app:layout_constraintStart_toStartOf="@id/name_tag_layout"/>

    <EditText
        android:id="@+id/title_edt"
        android:layout_width="236dp"
        android:layout_height="20dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:hint="제목을 입력하세요"
        android:textColorHint="@color/title_edit_text_color"
        android:textColor="@color/title_edit_text_color"
        android:textSelectHandle="@color/title_edit_text_color"
        android:textCursorDrawable="@color/title_edit_text_color"
        android:background="@android:color/transparent"
        android:fontFamily="@font/roboto_regular"
        android:overScrollMode="never"
        android:includeFontPadding="false"
        android:maxLength="20"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/year_month_date_tv"
        app:layout_constraintStart_toStartOf="@id/year_month_date_tv"/>

    <EditText
        android:id="@+id/content_edt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="오늘 반려친구는 어떤 하루를 보냈나요?"
        android:textColorHint="@color/content_edit_text_color"
        android:textColor="@color/content_edit_text_color"
        android:textSelectHandle="@color/content_edit_text_color"
        android:textCursorDrawable="@color/content_edit_text_color"
        android:background="@android:color/transparent"
        android:fontFamily="@font/roboto_light"
        android:includeFontPadding="false"
        android:gravity="start|top"
        android:textSize="14sp"
        android:maxLength="300"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/title_edt"
        app:layout_constraintStart_toStartOf="@id/title_edt"
        app:layout_constraintBottom_toTopOf="@id/add_img_iv"/>

    <ImageView
        android:id="@+id/add_img_iv"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/border_img"
        android:paddingStart="20dp"
        android:paddingTop="21dp"
        android:paddingEnd="20dp"
        android:paddingBottom="21dp"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toTopOf="@id/register_btn"
        app:layout_constraintStart_toStartOf="@id/content_edt"
        app:layout_constraintTop_toBottomOf="@id/content_edt"
        app:tint="#454545" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center|center_vertical"
        android:includeFontPadding="false"
        android:text="등록"
        android:textSize="16sp"
        android:textColor="@color/white"
        style="?android:attr/borderlessButtonStyle"
        android:background = "@drawable/border_register_button_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_img_iv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/img_rv"
        android:layout_width="0dp"
        android:layout_height="74dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="25dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toTopOf="@id/add_img_iv"
        app:layout_constraintBottom_toBottomOf="@id/add_img_iv"
        app:layout_constraintStart_toEndOf="@id/add_img_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_edt"/>

</androidx.constraintlayout.widget.ConstraintLayout>