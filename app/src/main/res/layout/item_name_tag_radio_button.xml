<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RadioButton
        android:id="@+id/name_tag_rb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:button="@null"/>

    <ImageView
        android:id="@+id/profile_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/border_name_tag_img"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/checked_border_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="invisible"
        android:background="@drawable/border_name_tag_animal_selected"
        app:layout_constraintTop_toTopOf="@id/profile_iv"
        app:layout_constraintBottom_toBottomOf="@id/profile_iv"
        app:layout_constraintStart_toStartOf="@id/profile_iv"
        app:layout_constraintEnd_toEndOf="@id/profile_iv"/>

    <TextView
        android:id="@+id/other_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:text="Other"
        android:fontFamily="@font/roboto_medium"
        android:textSize="28dp"
        app:layout_constraintTop_toTopOf="@id/checked_border_iv"
        app:layout_constraintBottom_toBottomOf="@id/checked_border_iv"
        app:layout_constraintStart_toStartOf="@id/checked_border_iv"
        app:layout_constraintEnd_toEndOf="@id/checked_border_iv"/>

    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/name_tag_tv"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:fontFamily="@font/jalnan"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/profile_iv"
        app:layout_constraintStart_toStartOf="@id/profile_iv"
        app:layout_constraintEnd_toEndOf="@id/profile_iv"/>

    <TextView
        android:id="@+id/unchecked_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="#80FFFFFF"/>

</androidx.constraintlayout.widget.ConstraintLayout>