<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/fragment_setting_top_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_setting_user_profile_cl"
        android:layout_width="360dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_setting_top_tv"
        app:layout_constraintVertical_bias="1"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/fragment_setting_user_profile_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.116"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_android_black_24dp"
            android:scaleType="centerCrop"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/fragment_setting_user_profile_image_arrow_cv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="@id/fragment_setting_user_profile_img"
            app:layout_constraintRight_toRightOf="@id/fragment_setting_user_profile_img"
            app:cardCornerRadius="20dp"
            >
            <ImageView
                android:id="@+id/fragment_setting_user_profile_image_arrow_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:background="@color/black"
                />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/fragment_setting_user_profile_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textColor="@color/gray_color"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="@id/fragment_setting_user_profile_nickname_tv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:id="@+id/fragment_setting_user_profile_nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_setting_user_profile_id_tv"
            app:layout_constraintLeft_toRightOf="@id/fragment_setting_user_profile_img"
            android:text="닉네임"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_setting_logout_bt"
        android:layout_width="310dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_setting_user_profile_cl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/background_gray_round"
        android:text="로그아웃"
        android:textSize="16dp"
        android:textColor="#353535"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_gray"
        android:paddingLeft="15dp"
        android:paddingRight="12dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_setting_inquiry_bt"
        android:layout_width="310dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_setting_logout_bt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/background_gray_round"
        android:text="문의하기"
        android:textSize="16dp"
        android:textColor="#353535"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_gray"
        android:layout_marginBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="12dp"
        android:layout_marginTop="10dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_setting_secession_bt"
        android:layout_width="310dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_setting_inquiry_bt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/background_gray_round"
        android:text="탈퇴하기"
        android:textSize="16dp"
        android:textColor="#353535"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_gray"
        android:layout_marginBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="12dp"
        android:layout_marginTop="10dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        />

</androidx.constraintlayout.widget.ConstraintLayout>