<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_month_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/year_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="2022"
        android:textSize="18dp"
        android:fontFamily="@font/roboto_regular"
        android:includeFontPadding="false"
        android:textColor="@color/main_color_black"
        android:layout_marginTop="20dp"
        android:layout_marginStart="21dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/month_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="7ì›”"
        android:textSize="26dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/jalnan"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/year_tv"
        app:layout_constraintStart_toStartOf="@id/year_tv"/>

    <com.example.companion_diary.diary.custom.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/month_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>