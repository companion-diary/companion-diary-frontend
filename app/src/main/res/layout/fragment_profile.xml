<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_profile_user_profile_cl"
        android:layout_width="360dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_profile_animal_textview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1">

        <ImageView
            android:id="@+id/fragment_profile_user_profile_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.116"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_android_black_24dp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/fragment_profile_user_profile_image_arrow_cv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="@id/fragment_profile_user_profile_img"
            app:layout_constraintRight_toRightOf="@id/fragment_profile_user_profile_img"
            app:cardCornerRadius="20dp"
            >
            <ImageView
                android:id="@+id/fragment_profile_user_profile_image_arrow_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:background="@color/black"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/fragment_profile_user_profile_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textColor="@color/gray_color"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" />

        <TextView
            android:id="@+id/fragment_profile_hi_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안녕하세요,"
            app:layout_constraintTop_toBottomOf="@id/fragment_profile_user_profile_id_tv"
            app:layout_constraintLeft_toRightOf="@id/fragment_profile_user_profile_img"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/fragment_profile_username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment_profile_hi_tv"
            app:layout_constraintLeft_toRightOf="@id/fragment_profile_user_profile_img"
            android:text="닉네임"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/fragment_profile_animal_textview"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="반려동물"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/fragment_profile_animal_rv"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_profile_user_profile_cl" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_profile_animal_create_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가"
        android:background="#00ff0000"
        android:textColor="#FD961D"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/fragment_profile_animal_rv"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_profile_user_profile_cl"
        app:layout_constraintVertical_bias="0.0"
        android:onClick="open_fragment_create"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_profile_animal_rv"
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toTopOf="@id/fragment_profile_plant_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_profile_animal_textview"

        tools:listitem="@layout/item_animal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"

        />

    <TextView
        android:id="@+id/fragment_profile_plant_tv"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="반려식물"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_profile_animal_rv"
        app:layout_constraintBottom_toTopOf="@id/fragment_profile_plant_rv"
        android:layout_marginTop="15dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_profile_plant_create_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가"
        android:background="#00ff0000"
        android:textSize="20sp"
        android:textColor="#3D821C"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/fragment_profile_plant_rv"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_profile_animal_rv"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_profile_plant_rv"
        android:layout_width="360dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_profile_plant_tv"

        android:layout_marginTop="15dp"
        tools:listitem="@layout/item_plant"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"


        />

</androidx.constraintlayout.widget.ConstraintLayout>