<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="545dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    android:background="@drawable/border_bottom_sheet_dialog"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <ImageView
        android:id="@+id/prev_iv"
        android:layout_width="20dp"
        android:layout_height="32dp"
        android:background="@color/gray_color"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/year_month_date_tv"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:text="2022년 7월 30일"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/prev_iv"
        app:layout_constraintBottom_toBottomOf="@id/prev_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/companion_select_explanation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어떤 친구의 하루를 작성하시겠어요?"
        android:textSize="12sp"
        android:textColor="#858585"
        android:layout_marginStart="25dp"
        android:layout_marginTop="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/prev_iv"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/companion_name_tag_rv"
        android:layout_width="0dp"
        android:layout_height="115dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintStart_toStartOf="@id/companion_select_explanation_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/companion_select_explanation_tv"/>

    <TextView
        android:id="@+id/diary_explanation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="작성된 일기"
        android:textSize="12sp"
        android:textColor="#858585"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/companion_name_tag_rv"
        app:layout_constraintStart_toStartOf="@id/companion_select_explanation_tv"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/diary_rv"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/diary_explanation_tv"
        app:layout_constraintStart_toStartOf="@id/diary_explanation_tv"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    <Button
        android:id="@+id/write_diary_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="일기 작성"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintTop_toBottomOf="@id/diary_rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/main_color_green"/>

</androidx.constraintlayout.widget.ConstraintLayout>