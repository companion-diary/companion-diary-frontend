<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    
    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="43.98dp"
        android:layout_height="43.98dp"
        android:src="@color/gray_color"
        android:layout_marginTop="42.87dp"
        android:layout_marginStart="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    
    <TextView
        android:id="@+id/explanation_tv"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="친구들과 함께\n오늘을 기억해요!"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/icon_iv"
        app:layout_constraintBottom_toBottomOf="@id/icon_iv"
        app:layout_constraintStart_toEndOf="@id/icon_iv"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/diary_month_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintTop_toBottomOf="@id/icon_iv"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>