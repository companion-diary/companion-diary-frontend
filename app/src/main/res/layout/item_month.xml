<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/year_month_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="2022년 07월"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center_vertical|start"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/div"/>

    <View
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/year_month_tv"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:id="@+id/day_sun_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:text="일"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/div"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/day_mon_tv"/>

    <TextView
        android:id="@+id/day_mon_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:text="월"
        app:layout_constraintTop_toTopOf="@id/day_sun_tv"
        app:layout_constraintBottom_toBottomOf="@id/day_sun_tv"
        app:layout_constraintStart_toEndOf="@id/day_sun_tv"
        app:layout_constraintEnd_toStartOf="@id/day_tue_tv"/>

    <TextView
        android:id="@+id/day_tue_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:text="화"
        app:layout_constraintTop_toTopOf="@id/day_sun_tv"
        app:layout_constraintBottom_toBottomOf="@id/day_sun_tv"
        app:layout_constraintStart_toEndOf="@id/day_mon_tv"
        app:layout_constraintEnd_toStartOf="@id/day_wed_tv"/>

    <TextView
        android:id="@+id/day_wed_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:text="수"
        app:layout_constraintTop_toTopOf="@id/day_sun_tv"
        app:layout_constraintBottom_toBottomOf="@id/day_sun_tv"
        app:layout_constraintStart_toEndOf="@id/day_tue_tv"
        app:layout_constraintEnd_toStartOf="@id/day_thu_tv"/>

    <TextView
        android:id="@+id/day_thu_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:text="목"
        app:layout_constraintTop_toTopOf="@id/day_sun_tv"
        app:layout_constraintBottom_toBottomOf="@id/day_sun_tv"
        app:layout_constraintStart_toEndOf="@id/day_wed_tv"
        app:layout_constraintEnd_toStartOf="@id/day_fri_tv"/>

    <TextView
        android:id="@+id/day_fri_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:text="금"
        app:layout_constraintTop_toTopOf="@id/day_sun_tv"
        app:layout_constraintBottom_toBottomOf="@id/day_sun_tv"
        app:layout_constraintStart_toEndOf="@id/day_thu_tv"
        app:layout_constraintEnd_toStartOf="@id/day_sat_tv"/>

    <TextView
        android:id="@+id/day_sat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:text="토"
        app:layout_constraintTop_toTopOf="@id/day_sun_tv"
        app:layout_constraintBottom_toBottomOf="@id/day_sun_tv"
        app:layout_constraintStart_toEndOf="@id/day_fri_tv"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/diary_day_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/day_sun_tv"
        app:layout_constraintStart_toStartOf="@id/div"
        app:layout_constraintEnd_toEndOf="@id/div"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>