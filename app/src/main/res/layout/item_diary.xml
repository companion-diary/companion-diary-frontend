<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_diary_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/look_diary_icon_iv"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:src="@drawable/ic_animal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/look_diary_name_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9.5dp"
        android:maxLines="1"
        android:text="호두"
        android:fontFamily="@font/jalnan"
        android:textColor="@color/main_color_orange"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/look_diary_icon_iv"
        app:layout_constraintStart_toEndOf="@id/look_diary_icon_iv"
        app:layout_constraintTop_toTopOf="@id/look_diary_icon_iv" />

    <ImageView
        android:id="@+id/look_diary_more_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25.84dp"
        android:layout_marginEnd="18dp"
        android:src="@drawable/ic_more"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/year_month_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/main_color_orange"
        android:fontFamily="@font/roboto_medium"
        android:includeFontPadding="false"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/look_diary_icon_iv"
        app:layout_constraintStart_toStartOf="@id/look_diary_icon_iv"/>

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="10dp"
        android:maxLength="20"
        android:text="우리 호두는 왜 이렇게 귀여워?"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/main_color_black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/year_month_date_tv"
        app:layout_constraintTop_toBottomOf="@id/year_month_date_tv" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/img_vp"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintTop_toBottomOf="@id/title_tv"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"/>

    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
        android:id="@+id/vp_dot_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        app:layout_constraintTop_toBottomOf="@id/img_vp"
        app:layout_constraintStart_toStartOf="@id/img_vp"
        app:layout_constraintEnd_toEndOf="@id/img_vp"
        app:layout_constraintBottom_toTopOf="@id/contents_tv"
        app:dotsColor="@color/unselected_dot_color"
        app:selectedDotColor="@color/main_color_orange"
        app:dotsSize="6dp"
        app:dotsSpacing="5dp"
        app:progressMode="false"
        app:dotsCornerRadius="8dp"/>

    <TextView
        android:id="@+id/contents_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="@font/roboto_regular"
        android:textSize="14sp"
        android:textColor="@color/sub_color_gray"
        android:includeFontPadding="false"
        android:scrollbars="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="23dp"
        app:layout_constraintTop_toBottomOf="@id/vp_dot_indicator"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>